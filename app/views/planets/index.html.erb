<h1 align="center">Planets</h1>
<table align="center">
  <thead>
    <tr>
      <th>Name</th><br><br>
      <th>Type of Planet</th>
      <th>Description</th>
      <th>Length of Year</th>
      <th>Distance from the Sun</th>
      <th>Moons</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.planets.each do |planet| %>
      <tr>
        <td><%= planet.name %></td><br><br>
        <td><%= planet.type_of_planet %></td>
        <td><%= planet.description %></td>
        <td><%= planet.length_of_year %></td>
        <td><%= planet.distance_from_sun %></td>
        <td><%= planet.moons %></td>
        <td><%= link_to 'Show', planet %></td>
        <td><%= link_to 'Edit', edit_planet_path(planet) %></td>
        <td><%= link_to 'Delete', destroy_planet_path(planet), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p align="center"><%= link_to "Add a Planet", '/new_planet' %></p>