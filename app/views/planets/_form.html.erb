<%= render partial: "layouts/errors", locals: {object: @planet} %>

<%= form_with(model: @planet, local: true) do |form| %>
    
    <div class="fields">
        <%= form.label :name %>
        <br>
        <%= form.text_field :name %>
        <br>
        <br>
    </div>

    <div class="fields">
        <%= form.label :type_of_planet %>
        <br>
        <%= form.text_field :type_of_planet %>
        <br>
        <br>
    </div>

    <div class="fields">
        <%= form.label :description %>
        <br>
        <%= form.text_area :description %>
        <br>
        <br>
    </div>

    <div class="fields">
        <%= form.label :length_of_year %>
        <br>
        <%= form.text_field :length_of_year %> (In Days.)
        <br>
        <br>
    </div>

    <div class="fields">
        <%= form.label :distance_from_sun %>
        <br>
        <%= form.text_field :distance_from_sun %> (In AU(Astronomical Units))
        <br>
        <br>
    </div>

    <div class="fields">
        <%= form.label :moons %>
        <br>
        <%= form.text_field :moons %>
        <br>
        <br>
    </div>
    
    <%= form.label :image %>
    <%= form.file_field :image %>
    <br>
    <br>

    <div class="actions">
        <%= form.submit 'Submit' %>
    </div>
<% end %>
<br>
