<h1 align="center">Sign Up!</h1>

<div align="center">
    <%= form_with model: @user, local: true do |f| %>
        
        <% if @user.errors.any? %>
            <p>There were errors:</p>
            <p><%= @user.errors.full_messages.join(" | ") %></p>
        <% end %>

        <%= f.label :username %>
        <%= f.text_field :username %>
        <br>
        <br>

        <%= f.label :email %>
        <%= f.email_field :email %>
        <br>
        <br>

        <%= f.label :password %>
        <%= f.password_field :password %>
        <br>
        <br>

        <%= f.submit 'Sign Up!' %>

    <% end %>
</div>