<%= form_with(model: @comment, local: true) do |form| %>
    <% if @comment.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

            <ul>
                <% @comment.erorrs.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="fields">
        <% if !@comment.planet %>
            <%= form.label :planet %>
            <br>
            <%= form.collection_select :planet_id, Planet.all, :id, :name %>
            <br>
            <br>
        <% else %>
            <%= form.hidden_field :planet_id %>
        <% end %>
    </div>

    <div class="fields">
        <%= form.label :content %>
        <br>
        <%= form.text_area :content %>
        <br>
        <br>
    </div>

    <div class="actions">
        <%= form.submit 'Submit' %>
    </div>
<% end %>
<br>